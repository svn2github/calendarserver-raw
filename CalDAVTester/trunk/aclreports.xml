					<value>1</value>
				</header>
				<ruri>1.ics</ruri>
				<data>
					<content-type>text/xml; charset=utf-8</content-type>
					<filepath>Resource/aclreports/1.xml</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
