			</request>
		</test>
		<test name='4'>
			<description>Shared address book exists</description>
			<request user="$userid2:" pswd="$pswd2:" print-response='no'>
				<method>PROPFIND</method>
				<ruri>$sharedaddressbook:/</ruri>
