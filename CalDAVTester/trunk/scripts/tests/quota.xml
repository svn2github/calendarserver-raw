					</arg>
					<arg>
						<name>badprops</name>
						<value>DAV:quota-available-bytes</value>
						<value>DAV:quota-used-bytes</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='7' ignore='no'>
			<description>props on principal</description>
			<request print-response='no'>
				<method>PROPFIND</method>
				<header>
					<name>Depth</name>
					<value>0</value>
