<caldavtest>
	<start/>
	
	<test-suite name='regular prop finds' ignore='yes'>
		<test name='1' count='100' stats='yes' ignore='no'>
			<description>PROPFIND of basic properties on calendar with 10 items</description>
			<request print-response='no'>
				<method>PROPFIND</method>
				<header>
					<name>Depth</name>
					<value>1</value>
				</header>
				<ruri>$calendarhome:/calendar.100/</ruri>
				<data>
					<content-type>text/xml; charset=utf-8</content-type>
					<filepath>Resource/performance/multiget-checks/1.xml</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
	</test-suite>
	
	<test-suite name='multiget - no data' ignore='yes'>
		<test name='1' count='100' stats='yes' ignore='no'>
			<description>PROPFIND of basic properties on calendar with 10 items</description>
			<request print-response='no'>
				<method>REPORT</method>
				<ruri>$calendarhome:/calendar.100/</ruri>
				<data>
					<content-type>text/xml; charset=utf-8</content-type>
					<filepath>Resource/performance/multiget-checks/2.xml</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
	</test-suite>
	
	<test-suite name='multiget data' ignore='no'>
		<test name='1' count='100' stats='yes' ignore='no'>
			<description>PROPFIND of basic properties on calendar with 10 items</description>
			<request print-response='no'>
				<method>REPORT</method>
				<ruri>$calendarhome:/calendar.100/</ruri>
				<data>
					<content-type>text/xml; charset=utf-8</content-type>
					<filepath>Resource/performance/multiget-checks/3.xml</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
	</test-suite>
	
	<end/>
	
</caldavtest>
