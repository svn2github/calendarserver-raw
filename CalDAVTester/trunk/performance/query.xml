			</request>
		</test>
		<test name='2' details='yes' count='10' stats='yes' ignore='no'>
			<description>query REPORT for time-range on calendar with 100 items</description>
			<request>
				<method>REPORT</method>
				<header>
					<name>Depth</name>
					<value>1</value>
				</header>
				<ruri>$calendarhome1:/calendar.100/</ruri>
				<data>
