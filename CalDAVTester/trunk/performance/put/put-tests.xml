						<name>status</name>
						<value>2xx</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='3' count='10' stats='yes'>
			<description>PUT to collection</description>
			<request>
				<method>PUT</method>
				<ruri>$pathprefix:/3.ics</ruri>
