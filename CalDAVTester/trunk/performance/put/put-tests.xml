						<value>2xx</value>
					</arg>
				</verify>
			</request>
		</test>
	</test-suite>

	<test-suite name='Plain PUT - calendar collection' ignore='no'>
		<test name='4' count='10' stats='yes'>
			<description>PUT to calendar collection</description>
			<request>
				<method>PUT</method>
				<ruri>1.ics</ruri>
